{
    "name": "agent-ipc",
    "version": "1.0.0",
    "description": "Inter-process communication for AI agent sessions via tmux",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "agent-ipc": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/cli.ts",
        "start": "node dist/cli.js",
        "cli": "tsx src/cli.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit",
        "lint": "biome lint .",
        "format": "biome format . --write",
        "check": "biome check .",
        "check:fix": "biome check . --write"
    },
    "keywords": [
        "agent",
        "tmux",
        "ipc",
        "ai",
        "llm"
    ],
    "author": "Shane Holloman",
    "license": "MIT",
    "packageManager": "pnpm@10.20.0",
    "devDependencies": {
        "@biomejs/biome": "2.3.9",
        "@types/node": "^25.0.3",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    },
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "commander": "^14.0.2",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "pino-roll": "^4.0.0"
    }
}
